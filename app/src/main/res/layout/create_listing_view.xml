<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="3"
        android:background="#E7E3DB"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            app:srcCompat="@drawable/ic_action_cancel" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            app:srcCompat="@drawable/ic_action_cancel" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            app:srcCompat="@drawable/ic_action_cancel" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="?attr/colorPrimary"
            app:srcCompat="@drawable/ic_action_cancel" />

        <Button
            android:id="@+id/imageUploadButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/colorAccent"
            android:clickable="true"
            android:text="Upload Images"
            android:textColor="#F7F6F4"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/startDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="?attr/colorAccent"
            android:calendarViewShown="false"
            android:clickable="true"
            android:hint="\nContract Start Date"
            android:textAlignment="center"
            android:textColor="#F7F6F4"
            android:textColorHint="#F7F6F4"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/endDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="?attr/colorAccent"
            android:clickable="true"
            android:hint="\nContract End Date"
            android:textAlignment="center"
            android:textColor="#F7F6F4"
            android:textColorHint="#F7F6F4"
            android:textSize="18sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <EditText
            android:id="@+id/apartmentNameET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="3"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:inputType="text"
            android:background="#FCFCFB"
            android:hint="Name of Housing Complex"
            android:nextFocusDown="@id/addressET"
            android:textColorHint="#AC9D92" />

        <EditText
            android:id="@id/addressET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:layout_weight="3"
            android:background="#FCFCFB"
            android:hint="Address"
            android:nextFocusDown="@id/rentCostET"
            android:textColorHint="#AC9D92" />

        <EditText
            android:id="@id/rentCostET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:layout_weight="3"
            android:background="#FCFCFB"
            android:hint="Monthly Cost"
            android:inputType="number"
            android:nextFocusDown="@id/descriptionET"
            android:textColorHint="#AC9D92" />

        <EditText
            android:id="@id/descriptionET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#FCFCFB"
            android:gravity="top|left"
            android:hint="Details"
            android:inputType="textMultiLine"
            android:imeOptions="actionDone"
            android:textColorHint="#AC9D92" />


    </LinearLayout>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="3"
        android:background="?attr/colorAccent"
        android:clickable="true"
        android:text="SUBMIT"
        android:textColor="#F7F6F4"
        android:textSize="20dp" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>